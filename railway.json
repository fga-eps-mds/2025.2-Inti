{
  "$schema": "https://schema.up.railway.app/railway.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests -Pprod",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "cmds": [
            "apt-get update && apt-get install -y maven"
          ]
        },
        "build": {
          "cmds": [
            "mvn clean package -DskipTests -Pprod"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "JAR_FILE=$(ls target/*.jar | head -1) && java -Xmx2048M -Dspring.profiles.active=prod -jar \"$JAR_FILE\"",
    "restartPolicyType": "ON_FAILURE"
  }
}