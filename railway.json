{
  "$schema": "https://schema.up.railway.app/railway.json", 
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -Dmaven.test.skip=true -Pprod"
  },
  "deploy": {
    "startCommand": "java -Xmx2048M -Dspring.profiles.active=prod -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE"
  }
}