{
  "build": {
    "builder": "NIXPACKS", 
    "buildCommand": "mvn clean package -DskipTests -Pprod"
  },
  "deploy": {
    "startCommand": "JAR_FILE=$(find target -name '*.jar' | head -1) && java -Xmx2048M -Dspring.profiles.active=prod -jar \"$JAR_FILE\"",
    "restartPolicyType": "ON_FAILURE"
  }
}